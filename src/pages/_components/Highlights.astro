<section id="highlights" class="py-20">
  <header class="mb-8 lg:mb-10 flex items-center gap-x-4 justify-between">
    <h2 class="text-base lg:text-xl font-bold uppercase text-zinc-900">
      Featured Projects
    </h2>
    <button class="text-sm underline text-blue-600 py-1 px-2">
      View Archive
    </button>
  </header>

  <div class="flex flex-wrap gap-y-20 gap-x-8 lg:gap-x-12 lg:gap-y-20">
    {
      [1, 2, 3, 4].map((item) => (
        <article class="w-full lg:w-1/3 grow">
          <img
            src={`/images/projects/project-${item}.png`}
            alt={`Project ${item}`}
            class="w-full object-cover h-80 bg-zinc-100"
          />

          <div class="flex flex-col p-1">
            <div class="flex items-end justify-between py-2">
              <h4 class="text-base lg:text-lg font-medium">
                Full Stack Build {item}
              </h4>

              <span class="text-sm">2024</span>
            </div>

            <p class="text-sm text-black-600">
              A brief description of Project {item} goes here. Built with:{" "}
              {["Astro", "Tailwind CSS", "Typescript"].map((tag, index) => {
                const prefix = index === 0 ? "" : ", ";
                return (
                  <span class="text-stone-600">
                    {prefix}
                    {tag}
                  </span>
                );
              })}
              .
            </p>

            <div class="flex items-center flex-wrap gap-x-4 gap-y-2 pt-2">
              <a href="#" class="text-sm text-blue-600 hover:underline">
                Live Demo
              </a>{" "}
              <span class="text-xs">//</span>{" "}
              <a href="#" class="text-sm text-blue-600 hover:underline">
                More Details
              </a>
            </div>
          </div>
        </article>
      ))
    }
  </div>
</section>
