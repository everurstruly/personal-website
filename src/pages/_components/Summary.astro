---
import {
  ExternalLink,
  Github,
  Linkedin,
  MessageCircleMore,
} from "lucide-astro";
import { socialLinks } from "../seo";
---

<section id="summary" class="pt-14 pb-10">
  <div class="max-w-fit min-[500px]:max-w-none min-[500px]:mx-auto">
    <p
      class="w-full max-w-[46ch] lg:mx-auto text-lg min-[500px]:text-xl min-[500px]:text-center lg:text-2xl mb-4 !leading-[1.54]"
    >
      Hii! I'm <span class="">Tefa</span>, a passionate Front-end developer with
      3+ years of experience building full-stack web applications across modern
      JavaScript frameworks and backend technologies to deliver efficient,
      user-focused products.
    </p>

    <div class="flex gap-x-6 items-center min-[500px]:justify-center">
      {
        [
          { Icon: Github, href: socialLinks.github.href },
          { Icon: Linkedin, href: socialLinks.linkedin.href },
          { Icon: MessageCircleMore, href: socialLinks.whatsapp.href },
        ].map((item) => {
          return (
            <a
              class="size-10 rounded-full border border-zinc-200 dark:border-zinc-800 grid place-content-center text-xs hover:border-zinc-700 dark:hover:border-zinc-100 transition-colors"
              href={item.href}
              target="_blank"
              rel="noopener noreferrer"
              title={item.href.replace("https://", "").split(".")[0]}
            >
              <item.Icon class="size-5 stroke-zinc-700 dark:stroke-zinc-100" />
            </a>
          );
        })
      }
    </div>

    <a
      href="https://linkedin.com/in/everurstruly"
      class="flex items-center px-0 gap-x-2 mt-6 text-base min-[500px]:mx-auto w-fit text-blue-600 mastermind_jumpscare"
    >
      Read more about me
      <ExternalLink class="size-4" />
    </a>
  </div>
</section>

<style>
  /* make anchor scrolling land below mobile topbars: 4rem on small screens, keep desktop spacing at lg */

  #summary {
    scroll-margin-top: 20rem;
  }

  @media screen and (min-width: 1024px) {
    /* desktop: respect original padding (pt-14 = 3.5rem) */
    #summary {
      /* revert to the default behaviour on desktop so we don't hardcode a size */
      scroll-margin-top: revert;
    }
  }
</style>
